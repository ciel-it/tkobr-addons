<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="1">
        <!-- This method runs at first installation of module for first time
        it will clone discount into discount_value field, later one is visible on view -->
        <function model="sale.order.line" name="_clone_discount_from_sale_order_lines"/>

        <!-- Update decimal accuracy for Discount, to convert fixed type discount into percent
        and get correct value we need to manage discount at least 5 digits -->
        <record forcecreate="True" id="product.decimal_discount" model="decimal.precision">
            <field name="name">Discount</field>
            <field name="digits">5</field>
        </record>
    </data>

</openerp>